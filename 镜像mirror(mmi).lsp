(defun c:mmi()
  (setq en (ssget))
  (setq pt1 (getpoint "\\n指定R射的第一c:"))
  (setq pt2 (getpoint pt1 "\\n指定R射的第二c:"))
  (initget "Y N")
  (setq qq (getkword "\\n是否h除碓次锛？[是(Y)/否(N)] <Y>"))
  (if (= qq nil) (setq qq "Y"))
  (command "mirror" en "" pt1 pt2 qq)
  (princ)
)
(prompt "\\n<<<<<  程式指令: mmi >>>>>")

